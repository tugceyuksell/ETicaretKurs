<script>
    $(document).ready(function () {
        $(".Resimler").hover(function () {
            var OkunanYol = $(this).attr("src");
            $("#BuyukResim").attr("src", OkunanYol);
        });
    });
</script>
<div class="col-md-2"></div>
<div class="col-md-8" style="margin-bottom:5px;margin-top:5px;"><img src="/images/@Model.MainImage" width="100%" id="BuyukResim" /></div>
<div class="col-md-2">
    <img src="/images/@Model.MainImage" style="margin-bottom:5px;" width="100%" class="Resimler" />
    @if (Model.Images1 != null)
    {
        <img src="/images/@Model.Images1" width="100%" style="margin-bottom:5px;" class="Resimler" />
    }
    @if (Model.Images2 != null)
    {
        <img src="/images/@Model.Images2" width="100%" style="margin-bottom:5px;" class="Resimler" />
    }
    @if (Model.Images3 != null)
    {
        <img src="/images/@Model.Images3" width="100%" style="margin-bottom:5px;" class="Resimler" />
    }
    @if (Model.Images4 != null)
    {
        <img src="/images/@Model.Images4" width="100%" style="margin-bottom:5px;" class="Resimler" />
    }
</div>

<div class="col-md-12" style="text-align:center;font-size:25px;font-weight:bold;padding:15px;">@Model.Name</div>
<div class="col-md-12" style="text-align:center;font-size:20px;font-weight:bold;padding:15px;">@Model.Price.ToString("n")</div>

<div class="col-md-12" style="text-align:center;padding:15px;"><button type="button" class="btn btn-primary" onclick="SepetEkle(@Model.Id,1)"> Sepete Ekle</button></div>

<div class="col-md-12" style="text-align:center;padding:15px;">@Model.Explanation</div>

<script>
    function SepetEkle(UrunId, Adet) {
        $.ajax({
            type: "POST",
            url: "/JsonIslemleri/Sepet",
            data: { ProductsId: '' + UrunId + '', Piece: '' + Adet + '' },
            DataType: "json",
            success: function (response) {
                $("#AdetJS").load("/Sepet/SepetToplamAdet");
                alert(response);
            },
            error: function (response) {
                alert(response);
            }
        });
    }
</script>