<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <div class="col-md-12">
            <nav class="navbar navbar-inverse">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">WebSiteName</a>
                </div>
                <ul class="nav navbar-nav">
                    <li><a href="/">Anasayfa</a></li>
                    @await Component.InvokeAsync("KategoriGetir")
                </ul>
                <ul class="nav navbar-nav navbar-right" style="padding-right:15px;">
                    <li>
                        <a href="/Sepet">
                            <span class="glyphicon glyphicon-log-in" style="margin-right:5px;"></span>
                            Sepetim
                            <span id="AdetJS" style="background-color:#ffffff;color:#000000;border-radius:20px;padding-top:3px;padding-bottom:3px;padding-left:7px;padding-right:7px;margin-left:2px;opacity:0.8;"></span>
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a href="/">@User.Identity.Name</a></li>

                        if (User.IsInRole("Yönetici"))
                        {
                            <li><a href="/admin/Kategoriler">Yönetici Paneli</a></li>
                        }
                        <li><a href="/admin/Cikis">Çıkış</a></li>
                    }
                    else
                    {
                        <li><a href="/Uyelik"><span class="glyphicon glyphicon-user" style="margin-right:5px;"></span> Üyelik </a></li>
                    }

                </ul>
            </nav>
        </div>
        <script>
            $(document).ready(function () {
                $("#AdetJS").load("/Sepet/SepetToplamAdet");
            });
        </script>


        <div class="col-md-12">
            @RenderBody()
        </div>
    </div>

</body>
</html>
